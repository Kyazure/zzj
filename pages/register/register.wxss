/* pages/register/register.wxss */

.head{
  height: 550rpx;
  width: 100%;
  background-color: rgb(83, 255, 83, 0.308);
  display: flex;
}
.tubiao{
  height: 200rpx;
  width: 200rpx;
  margin: 180rpx auto;
  border: 3rpx solid white;
  border-radius: 15rpx;
  background-color: white;
}
.logo{
  width: 170rpx;
  height: 170rpx;
  margin-left: 15rpx;
  margin-top: 15rpx;
  background-size: cover;
}
.one{
  margin: 50rpx auto;
  width: 450rpx;
  height: 350rpx;
  letter-spacing: 5rpx;
}
.on{
  width: 100%;
  height: 100rpx;
  margin-bottom: 80rpx; 
  box-shadow: 0 2rpx 0 0  rgb(190, 194, 191);
}
.two{
  border: 1px solid rgb(234, 238, 235);
  box-shadow: 2rpx 0 0 0 rgb(190, 194, 191);
  background-color: white;
  margin: -100rpx auto;
  padding-top: 100rpx; 
  width: 600rpx;
  height: 260rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.exit{
  margin-top: -90rpx;
  margin-right: 10rpx; 
  width: 40rpx;
  height: 40rpx;
  float: right;
}
.exitpic{
  width: 30rpx;
  height: 30rpx;
  background-size: cover;
}
.inputitem{
  margin-left: 50rpx;
  margin-right: 50rpx; 
  margin-top: 10rpx;
  margin-bottom: 40rpx; 
  width: 500rpx;
  height:80rpx;
  color: rgba(94, 97, 96, 0.685);
  background-color: rgba(202, 199, 199, 0.377);
  border-radius: 10rpx;
}
.inner{
  margin: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background-size: cover;
  float: left;
}
input{
  width: 200rpx;
  font-size: 30rpx;
  height: 80rpx;
  float: left;
}
#left{
  border-radius: 0 0 0 20rpx;
  box-shadow: 0 3rpx 0 0  rgb(190, 194, 191);
  margin-left: -2rpx;
  float: left;
 }
#right{
  border-radius: 0 0 20rpx 0;
  box-shadow: 2rpx 3rpx 0 0  rgb(190, 194, 191);
  margin-right: -2rpx;
  float: right;
}
.down{
  color: rgb(190, 190, 190);
  font-size: 30rpx;
  width: 302rpx;
  height: 87rpx;
  float: left;
  border-radius: 0;
  border: 1rpx rgba(123, 128, 126, 0.39);
  flex-direction: column;
  text-align: center;
  align-items: center;
}
.three{
  background-color: white;
  margin: 100rpx auto; 
  width: 600rpx;
  height: 87rpx;
  border-radius: 0 0 20rpx 20rpx;
}