/* pages/details/details.wxss */

.swiper-tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  display: -webkit-box;
}

.scroll-header {
  display: flex;
  white-space: nowrap;
}

.swiper-tab-item {
  width: 90rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-tab2 {
  width: 100%;
  /* text-align: center; */
  height: 6vh;
  /* line-height: 3vh; */
  border: 2rpx solid rgba(158, 157, 157, 0.396);
  border-right: 0;
  overflow-x: scroll;
  margin-top: 10rpx;
}

.swiper-tab-item2 {
  width: 130rpx;
  color: #252525;
  display: inline-block;
  /* margin-bottom: 10rpx; *//* margin-bottom: 10rpx; */
}

.active2 {
  color: red;
}

.gongneng {
  width: 100rpx;
  height: 100rpx;
}

.kuang {
  height: 120rpx;
  width: 100%;
  border: 2rpx solid rgba(158, 157, 157, 0.396);
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}

.caozong {
  display: inline-block;
  width: 500rpx;
}

.text {
  display: flex;
  flex-flow: column;
}

.text1 {
  display: flex;
  flex-flow: column;
}

/*置顶与删除*/

.selection {
  font-size: 35rpx;
  color: rgb(206, 201, 201);
  width: auto;
  height: auto;
  position: absolute;
  background-color: rgb(0, 0, 0);
  border-radius: 15rpx;
}

.totop {
  width: 100rpx;
  height: 50rpx;
  border-style: none none solid none;
  border-width: 1rpx;
  border-color: rgb(206, 201, 201);
}

.delete {
  width: 100rpx;
  height: 50rpx;
}

.textcontent {
  margin-left: 15rpx;
  letter-spacing: 4rpx;
}

.totop-hover {
  opacity: 0.5;
}

.delete-hover {
  opacity: 0.5;
}

/*新增操作框*/

.btnn {
  width: 88rpx;
  height: 88rpx;
  margin: 6rpx;
  border-radius: 50%;
}

.btn-hover {
  opacity: 0.4;
}

.show-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgb(83, 255, 83);
  margin: 100rpx auto;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
  border-radius: 36rpx;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.btn-click {
  opacity: 0.9;
  transform: scale(0.8, 0.8); /*缩放*/
  background: #daebc2;
}
